{
  # Setup the site name

  use esmith::ConfigDB;

  my $config_db = esmith::ConfigDB->open_ro() or
    die "Couldn't open ConfigDB\n";

  my $SystemName = $config_db->get("SystemName")->value;
  my $DomainName = $config_db->get("DomainName")->value;

  my $GitWebSiteName = $SystemName . "." . $DomainName;

  $OUT = "";
  $OUT .= "# Site Name:\n";
  $OUT .= "\$site_name = \"" . $GitWebSiteName . "\"\;\n";
}
